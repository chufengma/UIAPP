<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.onefengma.commander.ui.MemberProfileActivity">

    <RelativeLayout
        style="@style/ChatSettingItemStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:background="@drawable/setting_bg_selector"
        android:clickable="false">

        <TextView
            android:id="@+id/name_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="姓名"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:layout_toRightOf="@id/name_hint"
            android:clickable="false"
            android:text="张三"
            android:textSize="16sp" />
    </RelativeLayout>

    <include layout="@layout/divider_1_dip" />

    <RelativeLayout
        style="@style/ChatSettingItemStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_bg_selector"
        android:clickable="false">

        <TextView
            android:id="@+id/area_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="关别"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:layout_toRightOf="@id/area_hint"
            android:clickable="false"
            android:text="南京关"
            android:textSize="16sp" />
    </RelativeLayout>

    <include layout="@layout/divider_1_dip" />

    <RelativeLayout
        style="@style/ChatSettingItemStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_bg_selector"
        android:clickable="false">

        <TextView
            android:id="@+id/depart_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="部门"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/depart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:layout_toRightOf="@id/depart_hint"
            android:clickable="false"
            android:text="技术部"
            android:textSize="16sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/send_message"
        style="@style/SettingButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:background="@drawable/green_btn_bg"
        android:text="发消息"/>

    <Button
        android:id="@+id/delete_member"
        style="@style/SettingButtonStyle"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:background="@drawable/setting_quit_button"
        android:text="删除成员"/>
</LinearLayout>
