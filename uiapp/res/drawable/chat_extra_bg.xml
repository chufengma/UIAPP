        <shape>
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="@color/divider" />
            <solid android:color="#afe0e0e0" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="@color/divider" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

</selector>