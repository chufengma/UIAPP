            <stroke android:width="1dip" android:color="@color/divider"/>
            <solid android:color="@color/multi_voice_btn_pressed" />
        </shape>
    </item>
     <item android:state_selected="true" >
        <shape android:shape="oval">
            <corners android:radius="5dip" />
